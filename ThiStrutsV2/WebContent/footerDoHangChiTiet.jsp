		function validateKhachHang() {
			var ten = document.getElementById("tenKH").value;
			var diaChi = document.getElementById("diaChiKH").value;
			var email = document.getElementById("emailKH").value;
			var sdt = document.getElementById("sdtKH").value;
			if(ten == "" || diaChi == "" || email == "" || sdt == "" ) {
				document.getElementById("loi").innerHTML = "Khong duoc de trong";
				return false;
			}
			else {
				document.getElementById("loi").innerHTML = "";
			}
			var re = /[A-Z0-9._%+-]+@[A-Z0-9.-]+.[A-Z]{2,4}/igm;
			if(re.test(email) == false) {
				document.getElementById("loi").innerHTML = "Email sai dinh dang";
				return false;
			}
			else {
				document.getElementById("loi").innerHTML = "";
			}
			var phoneNum = sdt.replace(/[^\d]/g, '');
			if(phoneNum.length < 6 || phoneNum.length > 11) {  
				document.getElementById("loi").innerHTML = "So dien thoai sai dinh dang";
				return false;  
			}
			else {
				document.getElementById("loi").innerHTML = "";
			}
			var tong = document.getElementById("tongAll").value;
			document.getElementById("tongGiaGioHang").setAttribute("value",tong);
			return true;
		}
		function kiemTra(id) {
			var number = document.getElementById(id).value;
			if(isNaN(number) == true) {
				document.getElementById(id).value = 1;
				thayDoiGiaTri(id);
				tinhTongGia();
				return;
			}
			else if(number <= 0) {
				document.getElementById(id).value = 1;
				thayDoiGiaTri(id);
				tinhTongGia();
				return;
			}
			else if(!(number % 1 === 0)) {
				document.getElementById(id).value = 1;
				thayDoiGiaTri(id);
				tinhTongGia();
				return;
			}
			else if ( number > 100) {
				document.getElementById(id).value = 100;
				thayDoiGiaTri(id);
				tinhTongGia();
				return;
			}
			else {
				thayDoiGiaTri(id);
				tinhTongGia();
			}
			
		}
		function tinhTongGia() {
			var arr = document.getElementsByName("tongGia");
			var s = 0;
			for (var i = 0; i < arr.length; i++) {
				s = Number(s) + Number(arr[i].value);
			}
			document.getElementById("tongAll").value = s;
		}
		
		function xoaDoHang(id) {
			var a = confirm("ban co muon xoa?");
			if(a == true) {
				window.location.href = "/ThiStrutsV2/xoa-doHang.do?maLoaiSP="+id;
				return;
			}
			else {
				return;
			}
			
		}
		function suaDoHang(id) {
			var soLuong = document.getElementById(id).value;
			window.location.href = "/ThiStrutsV2/sua-doHang.do?maLoaiSP="+id+"&soLuong="+soLuong+" ";
		}
		function thayDoiGiaTri(id) {
			document.getElementById("tongGia"+id).value = document.getElementById("gia"+id).value * document.getElementById(id).value;
			tinhTongGia();
		}
		function congSo(id) {
			if(Number(document.getElementById(id).value) == 100) {
				return;
			}
			document.getElementById(id).value = Number(document.getElementById(id).value) + 1;
			thayDoiGiaTri(id);
			tinhTongGia();
		}
		function truSo(id) {
			if(Number(document.getElementById(id).value) == 1) {
				return;
			}
			document.getElementById(id).value = Number(document.getElementById(id).value) - 1;
			thayDoiGiaTri(id);
			tinhTongGia();
		}
		function tinh() {
			var gia = document.getElementsByName("tinhGia");
			var soLuong = document.getElementsByName("arrList");
			for (var i = 0; i < gia.length; i++) {
				var tongGia = document.getElementsByName("tongGia");
				tongGia[i].value = gia[i].value * soLuong[i].value;
			}
			tinhTongGia();
		}
	</script>
